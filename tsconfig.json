{
	"compilerOptions": {
		"target": "esnext",
		"module": "es2015",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"lib": ["es2017"],
		"types": [
			"react",
			"react-native"
		],
		"esModuleInterop": true,
		"jsx": "react-native",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "./dist"
	},
	"include": ["src"],
	"exclude": ["node_modules/", "src/__tests__"]
}
